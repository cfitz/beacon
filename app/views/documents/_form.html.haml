= simple_nested_form_for @document, :html => { :class => 'form-horizontal',  :multipart => true, :autocomplete => 'off' } do |f|
  %section#document-info
    .control-group
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title, :class => 'text_field'
    .control-group
      = f.label :publication_date, :class => 'control-label'
      .controls
        = f.text_field :date, 'data-behaviour' => 'datepicker'
    .control-group
      = f.label :uuid, :class => 'control-label'
      .controls
        = f.text_field :uuid, :class => 'text_field', :readonly => 'true'
  %section#creators_rels
    %legend Creators
    - @document.creators_rels.each_with_index do |rel, index|
      = render :partial => "creators_rels", :locals => { :rel => rel, :index => index}
    %a{:href => "javascript:void(0)", :class=> "add_nested_fields", :data => {:association => "creators_rels", "blueprint-id" => "creators_rels_fields_blueprint"}} Add a creator
  %section#topics
    %legend Topics
    = f.fields_for :topics, Topic if !@document.topics.first.nil?
    = f.link_to_add "Add an topics", :topics
  %section#items
    %legend Items
    = f.fields_for :items, Item if !@document.items.first.nil?
    = f.link_to_add "Add an item", :items
  %section.form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), documents_path, :class => 'btn'
= render :partial => "creators_rels_blueprint"