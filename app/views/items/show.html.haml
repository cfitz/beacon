- model_class = Item
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:uri) + ':'
  %br
  = @item.uri
%p
  %strong= model_class.human_attribute_name(:format) + ':'
  %br
  = @item.format
%p
  %strong= model_class.human_attribute_name(:attachment_file_name) + ':'
  %br
  = @item.attachment_file_name
%p
  %strong= model_class.human_attribute_name(:attachment_content_type) + ':'
  %br
  = @item.attachment_content_type
%p
  %strong= model_class.human_attribute_name(:attachment_file_size) + ':'
  %br
  = @item.attachment_file_size
%p
  %strong= model_class.human_attribute_name(:attachment_updated_at) + ':'
  %br
  = @item.attachment_updated_at
%p 
  %ul
    %li=  link_to("See Documents", @item.attachment.url) 

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_item_path(@item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), item_path(@item), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
