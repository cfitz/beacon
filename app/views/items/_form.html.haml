= form_for @item, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :uri, :class => 'control-label'
    .controls
      = f.url_field :uri, :class => 'text_field'
  .control-group
    = f.label :format, :class => 'control-label'
    .controls
      = f.text_field :format, :class => 'text_field'
  .control-group
    = f.label :attachment, :class => 'control-label'
    .controls
      = f.file_field :attachment
  .control-group
    = f.label :attachment_file_name, :class => 'control-label'
    .controls
      = f.text_field :attachment_file_name, :class => 'text_field'
  .control-group
    = f.label :attachment_content_type, :class => 'control-label'
    .controls
      = f.text_field :attachment_content_type, :class => 'text_field'
  .control-group
    = f.label :attachment_file_size, :class => 'control-label'
    .controls
      = f.text_field :attachment_file_size, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), items_path, :class => 'btn'
