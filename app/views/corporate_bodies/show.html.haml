- model_class = CorporateBody
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @corporate_body.name

- if current_user && current_user.admin?
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), corporate_bodies_path, :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_corporate_body_path(@corporate_body), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), corporate_body_path(@corporate_body), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
