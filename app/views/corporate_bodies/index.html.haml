- model_class = CorporateBody
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @corporate_bodies.each do |corporate_body|
      %tr
        %td= link_to corporate_body.id, corporate_body_path(corporate_body)
        %td= corporate_body.name
        %td=l corporate_body.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_corporate_body_path(corporate_body), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), corporate_body_path(corporate_body), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_corporate_body_path, :class => 'btn btn-primary'
