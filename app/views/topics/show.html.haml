- model_class = Topic
.page-header
  %h1=t '.title', :default => "#{model_class.model_name.human} : #{@topic.name }"

%dl.dl-horizontal
  - if @topic.terms.length > 0
    %dt 
      Related Terms:
    %dd
      %ul
        - @topic.terms.each do |term|
          %li=  link_to(term.name, term)


  %dt= model_class.human_attribute_name(:documents) + ":"
  %dd
    %ul
      - @topic.documents.each do |doc|
        %li=  link_to(doc.title, doc)




- if current_user && current_user.admin?
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), topics_path, :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_topic_path(@topic), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), topic_path(@topic), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
