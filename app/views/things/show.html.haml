- model_class = Thing
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @thing.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), things_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_thing_path(@thing), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), thing_path(@thing), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
